<p id="notice"><%= notice %></p>

<h1>Raffles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td><%= link_to raffle.title, raffle %></td>
        <td><%= raffle.start_date %></td>
        <td><%= raffle.end_date %></td>
        <td><%= raffle.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
