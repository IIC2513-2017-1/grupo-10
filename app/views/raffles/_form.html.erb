<%= form_for(raffle) do |f| %>
  <% if raffle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(raffle.errors.count, "error") %> prohibited this raffle from being saved:</h2>

      <ul>
      <% raffle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= date_field_tag :start_date, Date.today, min: Date.today, required: true %>
    <%= time_field_tag :start_time, (Time.now + 1.hour).strftime("%H:%M"), required: true %>
  </div>

  <div class="field">
    <%= f.label :end_date %>
    <%= date_field_tag :end_date, Date.tomorrow, min: Date.tomorrow, required: true %>
    <%= time_field_tag :end_time, (Time.now + 1.day + 1.hour).strftime("%H:%M"), required: true %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, size: "24x6", required: true %>
  </div>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, min: 0, step: 100, value: 100, required: true %>
  </div>

  <div class="field">
    <%= f.label :number_amount %>
    <%= f.number_field :number_amount, min: 0, step: 10, value: 10, required: true %>
  </div>

  <div class="field">
    <%= f.label :private %>
    <%= f.check_box :private, value: false %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
