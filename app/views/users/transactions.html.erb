<% unless @made_transactions.blank? %>
  <h1>Made Transactions</h1>
  <table>
    <tr>
      <th>To</th>
      <th>Raffle</th>
      <th>Amount</th>
    </tr>
    <% @made_transactions.each do |t| %>
    <tr>
      <td><%= t.to_user.name %></td>
      <td><%= t.raffle.title %></td>
      <td><%= t.amount %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<% unless @received_transactions.blank? %>
  <h1>Received Transactions</h1>
  <table>
    <tr>
      <th>From</th>
      <th>Raffle</th>
      <th>Amount</th>
    </tr>
    <% @received_transactions.each do |t| %>
      <tr>
        <td><%= t.from_user.name %></td>
        <td><%= t.raffle.title %></td>
        <td><%= t.amount %></td>
      </tr>
    <% end %>
  </table>
<% end %>

<%= link_to 'Back', user_path(current_user) %>
