<%= form_for(reaction, url: reactions_path) do |f| %>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description, required: true %>
  </div>
  <div class="field">
    <%= f.label :image %>
    <%= f.file_field :image, required: true %>
  </div>
  <div class="field">
    <%= f.submit 'Create Reaction' %>
  </div>
<% end %>
