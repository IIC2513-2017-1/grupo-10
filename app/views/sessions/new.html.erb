<p><%= flash[:error] %></p>

<h1>Login</h1>

<%= form_tag login_path do %>
  <div class="field">
    <%= label_tag :username %>
    <%= text_field_tag :username, '', required: true %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password, '', required: true %>
  </div>

  <div class="field">
    <%= submit_tag 'Login' %>
  </div>
<% end %>
