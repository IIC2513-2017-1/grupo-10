<%= form_for([raffle, raffle.prizes.build]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, required: true %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, required: true %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, required: true %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
