<svg id="main" width=720 height=420 <%= "data-params-id=#{params[:id]}" if params.has_key?(:id) %>></svg>

<%= form_tag(raffle_numbers_path(raffle), id: "buy") do %>
  <% for n in 1..raffle.number_amount do  %>
    <input type="checkbox" style="display:none;" name="numbers[]" id="numbers_<%= n %>" value="<%= n %>"/>
  <% end %>
  </svg>
  <%= submit_tag 'Buy numbers' %>
<% end %>
