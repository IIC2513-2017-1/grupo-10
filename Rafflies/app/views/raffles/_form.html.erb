<%= form_for(raffle) do |f| %>
  <% if raffle.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(raffle.errors.count, "error") %> prohibited this raffle from being saved:</h2>

      <ul>
      <% raffle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= f.label :title %>
		<%= f.text_field :title %>
	</div>

  <div class="field">
    <%= f.label :end_date %>
    <%= f.datetime_select :end_date %>
  </div>

  <div class="field">
    <%= f.label :start_date %>
    <%= f.datetime_select :start_date %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

	<div class="field">
		<%= f.label :organizator %>
		<%= f.select :organizator do %>
		  <% @users.each do |user| -%>
		    <%= content_tag(:option, user.name, value: user.id) %>
		  <% end %>
		<% end %>
	</div>

	<div class="field">
		<%= f.label :price %>
		<%= f.number_field :price, min: 0, step: 100 %>
	</div>

	<div class="field">
		<%= f.label :number_amount %>
		<%= f.number_field :number_amount, min: 0, step: 10 %>
	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
